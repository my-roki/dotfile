{
  // Theme
  "workbench.colorTheme": "Atom One Dark",
  "workbench.iconTheme": "material-icon-theme",
  "editor.fontFamily": "D2Coding Nerd",
  "editor.fontSize": 14,
  "terminal.integrated.fontFamily": "D2Coding Nerd",
  "terminal.integrated.fontSize": 14,

  // Terminal Setting
  "terminal.integrated.cursorStyle": "underline",
  "terminal.integrated.cursorBlinking": true,
  "workbench.colorCustomizations": {
    "terminalCursor.background": "#1a1a1a",
    "terminalCursor.foreground": "#f1f1f1",
    "terminal.ansiBlack": "#000000",
    "terminal.ansiBlue": "#ede5d8",
    "terminal.ansiCyan": "#c98ba4",
    "terminal.ansiGreen": "#fce0e2",
    "terminal.ansiMagenta": "#e7b3ce",
    "terminal.ansiRed": "#e97384",
    "terminal.ansiWhite": "#ffffff",
    "terminal.ansiYellow": "#f9eff7",
    "terminal.ansiBrightBlack": "#4c4c4c",
    "terminal.ansiBrightBlue": "#ebe1e1",
    "terminal.ansiBrightCyan": "#eca3b7",
    "terminal.ansiBrightGreen": "#f0a0bd",
    "terminal.ansiBrightMagenta": "#ffcfe0",
    "terminal.ansiBrightRed": "#e35e8d",
    "terminal.ansiBrightWhite": "#f8f8f0",
    "terminal.ansiBrightYellow": "#e3bbc4"
  },

  // Editor format
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.rulers": [120],
  "prettier.printWidth": 120,
  "[python]": {
    "editor.defaultFormatter": null,
    "editor.formatOnType": true
  },
  "python.formatting.provider": "black",
  "python.formatting.blackArgs": ["--line-length", "120"],

  // ETC
  "cSpell.userWords": ["roki"],
  "cSpell.includeRegExpList": ["comments"],
  "liveServer.settings.donotVerifyTags": true,
  "editor.inlineSuggest.enabled": true,
  "gitlens.gitCommands.skipConfirmations": [
    "fetch:command",
    "stash-push:command"
  ],
  
  // 확장자 타입으로 정렬
  "explorer.sortOrder": "type",
  "[java]": {
    "editor.defaultFormatter": "redhat.java"
  }
}
